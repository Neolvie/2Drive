
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:minWidth="25px"
  android:minHeight="25px">

  
  <GridLayout
    android:columnCount="1"
    android:rowCount="5"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_toLeftOf="@id/startTrack"
    android:id="@+id/gridLayout1">
    <Button
      android:layout_row="0"
      android:text="Я поехал"
      android:layout_width="match_parent"
      android:layout_height="74.0dp"
      android:id="@+id/startTrack" />
    <Button
      android:layout_row="1"
      android:text="Я приехал"
      android:layout_width="match_parent"
      android:layout_height="74.0dp"
      android:id="@+id/stopTrack" />
    <TextView
      android:layout_row="2"
      android:layout_width="match_parent"
      android:layout_height="74.0dp"
      android:text=""
      android:id="@+id/state"/>
    <Button
      android:layout_row="3"
      android:text="Отправить данные поездки"
      android:layout_width="match_parent"
      android:layout_height="66.5dp"
      android:id="@+id/sendData" />
    <TextView
      android:layout_row="4"
      android:layout_width="match_parent"
      android:layout_height="74.0dp"
      android:text="Ver: 0.0.1.0"
      android:id="@+id/version"/>
  </GridLayout>>
</RelativeLayout>